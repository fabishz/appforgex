{
    "name": "training-portal-backend",
    "version": "1.0.0",
    "description": "Backend for Training Portal - Modern, Scalable & Secure",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "nodemon --exec 'node --experimental-specifier-resolution=node' dist/server.js",
        "dev:ts": "nodemon --exec ts-node src/server.ts",
        "build": "tsc",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write src",
        
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "training",
        "portal",
        "api",
        "express",
        "typescript",
        "mongodb"
    ],
    "author": "AppForGex",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "class-validator": "^0.14.0",
        "class-transformer": "^0.5.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "joi": "^17.13.1",
        "jsonwebtoken": "^9.1.2",
        "mongoose": "^8.1.2",
        "nanoid": "^5.0.1",
        "winston": "^3.11.0",
        "express-async-errors": "^3.1.1",
        "sanitize-html": "^2.13.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^20.12.7",
        "@types/sanitize-html": "^2.11.0",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "eslint": "^8.57.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "vitest": "^1.2.2"
    }
}